{
  "log": {
    "level": "info"
  },
  "inbounds": [
    {
      "type": "mixed",
      "tag": "mixed-in",
      "listen": "127.0.0.1",
      "listen_port": 2080
    }
  ],
  "outbounds": [
    {
      "type": "shadowsocks",
      "tag": "proxy-1",
      "server": "server1.example.com",
      "server_port": 8388,
      "method": "aes-256-gcm",
      "password": "password"
    },
    {
      "type": "shadowsocks",
      "tag": "proxy-2",
      "server": "server2.example.com",
      "server_port": 8388,
      "method": "aes-256-gcm",
      "password": "password"
    },
    {
      "type": "shadowsocks",
      "tag": "proxy-3",
      "server": "server3.example.com",
      "server_port": 8388,
      "method": "aes-256-gcm",
      "password": "password"
    },
    {
      "type": "loadbalance",
      "tag": "lb-by-ruleset",
      "primary_outbounds": [
        "proxy-1",
        "proxy-2",
        "proxy-3"
      ],
      "url": "https://www.gstatic.com/generate_204",
      "interval": "5m",
      "timeout": "5s",
      "top_n": {
        "primary": 3
      },
      "strategy": "consistent_hash",
      "hash": {
        "key_parts": [
          "src_ip",
          "matched_ruleset"
        ],
        "virtual_nodes": 100,
        "on_empty_key": "random"
      }
    },
    {
      "type": "direct",
      "tag": "direct"
    },
    {
      "type": "block",
      "tag": "block"
    }
  ],
  "route": {
    "rule_set": [
      {
        "tag": "geosite-google",
        "type": "remote",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-google.srs",
        "download_detour": "direct"
      },
      {
        "tag": "geosite-netflix",
        "type": "remote",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-netflix.srs",
        "download_detour": "direct"
      },
      {
        "tag": "geosite-category-ads-all",
        "type": "remote",
        "format": "binary",
        "url": "https://raw.githubusercontent.com/SagerNet/sing-geosite/rule-set/geosite-category-ads-all.srs",
        "download_detour": "direct"
      }
    ],
    "rules": [
      {
        "geoip": "private",
        "outbound": "direct"
      },
      {
        "rule_set": [
          "geosite-category-ads-all"
        ],
        "outbound": "block"
      },
      {
        "rule_set": [
          "geosite-google"
        ],
        "outbound": "lb-by-ruleset"
      },
      {
        "rule_set": [
          "geosite-netflix"
        ],
        "outbound": "lb-by-ruleset"
      }
    ],
    "final": "lb-by-ruleset"
  }
}
